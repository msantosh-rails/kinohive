<html>

<body>


<h1 style='display:inline;float:left;'> Videos </h1>
<% if !@videos.blank?%>
 <%= render :partial => "search_form.html.erb", locals: {q: @q} %> 	


<h4> Most Hivecoins Videos </h4>

<table>
<tr>
	<%@videos.each do |video|%>
	
	<td>  
		<% if !video.video_pic.blank? %>
			<%= link_to image_tag(video.video_pic_url,:width => 100, :height => 100, :class=>"img-polaroid"), video_path(video) %> 
		<% else %>
			<%= link_to image_tag('video.png', width: 100, height: 100, class: 'img-polaroid'), video_path(video) %>
		<% end %>
	<div class="title" ><%=video.video_title%></div>
	</td>
		<%end%>

</tr>
</table>	
		<%else%>
	
	<div class="well">No Videos to Display</div>
	
<%end%>

</div>
<% if current_user %>
<div class='span12' style="margin-left:40px;">
	<h4> Geographical Videos </h4>
		<% @videos.each do |video| %>
			<div class="videopic" >
			<% if !video.user_id.blank?%>
				<% if current_user.city === User.find(video.user_id).city %>
			
					<% if !video.video_pic.blank? %>
			<%= link_to image_tag(video.video_pic_url,:width => 100, :height => 100, :class=>"img-polaroid"), video_path(video) %> 
		<% else %>
			<%= link_to image_tag('video.png', width: 100, height: 100, class: 'img-polaroid'), video_path(video) %>
		<% end %>
					<div class="title" ><%=video.video_title%></div>
				<% end %>
			<% end %>
			</div>
		<% end %>
</div>
<% end %>
<div class='pull-right' style='padding-right:20px;'>
Visited Members: <%= @views %> </div>
</body>
</html>



