<h4> Enter Your Email to Change your Password </h4>
<div id="changepass-form">
  <%= form_tag reset_users_path, :method => "put", class: 'form-horizontal' do %>
	<div class="control-group">
       <label class="control-label">
      	    <%= label_tag :email %>  
	   </label>
       <div class="controls">
            <%= email_field_tag :email %>
       </div>  
	</div>
	<div class="control-group">
        <div class="controls">
			<%= submit_tag "Reset Password" %>
		</div>
	</div> 
  <% end %>
</div>
